<h3>Groups</h3>
<% if @groups.count > 0 %>
<% @ groups.each do |group| %>
<%= link_to group_entities_path, class: "card" do %>
<div class="card-body d-flex justify-content-between align-items-center mb-3">
<%= image_tag group.icon, class: "rounded-circle" %>
<div>
<p class="fw-semibold">
<%= group.name %>
</p>
<p class="fw-light">
<%= group.created_at %>
</p>
</div>
<p class="fw-bolder"> $10 </p>
</div>
<% end %>
<% else %>
<p>There are no groups yet.</p>
<% end %>
<%= link_to "New Group", new_group_path, class: "btn btn-primary fixed-bottom" %>
