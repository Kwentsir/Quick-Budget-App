<h3>Groups</h3>
<% if @groups.count > 0 %>
<% @groups.each do |group| %>
<%= link_to group_entities_path, class: "card mb-2" do %>
<div class="card-body d-flex justify-content-between align-items-center">
<%= image_tag group.icon || "http://localhost:3000/users/sign_up.jpg", class: "card_icon" %>
<div>
<p class="fw-semibold">
<%= group.name %>
</p>
<p class="fw-light">
<%= group.created_at, format: :long %>
</p>
</div>
<p class="fw-bolder"> $<%= group.entities.sum(&:amount) %> </p>
</div>
<% end %>
<% else %>
<p>There are no groups yet.</p>
<% end %>
<%= link_to "New Group", new_group_path, class: "btn btn-primary fixed-bottom" %>
