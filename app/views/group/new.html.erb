<h3> Create New Group </h3>
<%= form_with model: @group, url: group_index_path, method: :post, data: { turbo: false } do |form| %>
<div class="mb-3">
<%= form.label :name %>
<%= form.text_field :name, class: "form-control", placeholder: "Group Name" %>
</div>
<div class="mb-3">
<%= form.label :icon %>
<%= form.url_field :icon, class: "form-control", placeholder: "Icon url" %>
</div>
<div class="mb-3">
<%= form.submit "Create Group", class: "btn btn-primary" %>
</div>
<% end %>
